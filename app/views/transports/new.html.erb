<div class="container my-3">
  <div class="row">
    <div class="col-sm-12 col-md-10 offset-md-1">

      <h3 class="text-center">Congratulations, your booking for <strong><%= @island.name %></strong> has been confirmed! </h3>
      <br>
      <h5>Would you like to add a transport for the island?</h5>

      <div class="d-flex justify-content-center">
        <div class="row">
          <% @transports.each do |transport| %>
          <div class="card m-1" style="width: 18rem">
            <img src="<%= transport.photo %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= transport.name %></h5>
              <p class="card-text"> <%= transport.description %> <br> $ <%= transport.price %></p>
              <%= link_to "Select", island_transports_path(@island, @booking, t_id: transport.id),method: :post, class:"btn btn-primary btn-block"  %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <br>

<%= link_to "No Thanks", bookings_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

