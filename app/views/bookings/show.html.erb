<div class="container my-3">
  <div class="row">
    <div class="col-sm-12 col-md-10 offset-md-1">
      <h1 class="text-center">Here is you booking for <%= @booking.island.name %> </h1>

      <div class="card mb-3" style="width: 100%">
        <img src="<%= @booking.island.photo %>" class="card-img-top img-fluid" alt="<%= @booking.island.name %>">
        <div class="card-body">
          <h5 class="card-title"> <strong>Island:</strong> <%= @booking.island.name %> </h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
      </div>
    </div>
  </div>
</div>
