<div class="container" style="text-align: center; margin-top: 15px; margin-bottom: 30px;">
    <h2>Hello <%= current_user.username %>, here are your bookings </h2>
</div>

<div class="container">
  <% if !@bookings.empty? %>
  <% @bookings.each do |booking|%>
    <div class="card-trip col-sm-3 col-lg-4">
      <img src=" <%= booking.island.photo %> " style="margin-top: 15px;">
      <div>
        <div>
          <p class="mt-3">You have a reservation for <%= booking.island.name %></p>
            <% start_date = booking.start_date %>
            <div class="d-flex justify-content-between">
              <div>
                <p>From: <%= start_date.strftime('%d/%m/%y') %></p>
                <% end_date = booking.end_date %>
                <p>Until: <%= end_date.strftime('%d/%m/%y') %></p>
              </div>
              <div>
                <h2> <%=booking.island.price %> $ / Night </h2>
              </div>
            </div>
            <div class="mb-3">
              <%= link_to "Cancel this trip", booking_path(booking), method: :delete %>
            </div>
          <% end %>
          <% else %>
          <p>No bookings yet</p>
          <% end %>
        </div>
      </div>
  </div>
</div>
