<div class="banner-show" style="background-image: linear-gradient(360deg, rgb(50,54,57) 0%, rgba(243,182,201,0) 20%, rgba(243,182,201,0) 80%, rgb(50,54,57) 100%), url( <%= @island.photo %> );">
</div>

<div class="container mt-3 ">
  <h1> <%= @island.name %> </h1>
  <div class="row justify-content-between">
    <div class="col-sm-12 col-md-7 col-lg-8 mb-3">
      <h5> <%= @island.location %> | <%= @island.difficulty %> </h5>
      <br>
      <h6><strong>Description:</strong></h6>
      <%= @island.activities %>
    </div>

    <div id="booking-card" class="col-sm-12 col-md-5 col-lg-4">
      <div class="d-flex justify-content-between">
        <h6> <strong>Price:</strong><h6>
        <h6><%= @island.price %> $/night</h6>
      </div>
      <div class="d-flex justify-content-between">
        <h6> <strong>Size:</strong></h6>
        <h6><%= @island.size %> kmÂ²</h6>
      </div>
      <%= render 'bookings/form' %>
    </div>
  </div>
</div>

<div class="container d-flex">
  <%= link_to islands_path, class: "btn btn-outline-secondary mr-2" do %>
    Back
  <% end %>
<% if policy(@island).edit? %>
  <%= link_to edit_island_path(@island), class: "btn btn-outline-success" do %>
    Edit
  <% end %>
<% end %>
</div>


<div
  id="map"
  style="width: 100%;
  height: 75vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
