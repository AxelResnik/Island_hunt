<%= simple_form_for(@island) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :activities %>
    <%= f.input :size %>
    <%= f.input :price %>
    <%= f.input :difficulty %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
