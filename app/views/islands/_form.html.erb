<div class="container">

  <%= simple_form_for(@island) do |f| %>

    <div class="form-inputs">
      <%= f.input :name, placeholder: 'Captain Kidd\'s Island' %>
      <%= f.input :location, placeholder: 'Pacific Ocean' %>
      <%= f.input :activities, placeholder: 'A detailed list of the treasure hunt' %>
      <%= f.input :size, placeholder: '200 sq.ft' %>
      <%= f.input :price, placeholder: '$$$' %>
      <%= f.input :difficulty, :collection => %w[Easy Medium Hard] %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, value: "Add", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

</div>
