<div class="container">

  <%= simple_form_for(@island) do |f| %>

    <div class="form-inputs">
      <%= f.input :name, placeholder: 'Captain Kidd\'s Island' %>
      <%= f.input :location, placeholder: 'Caribbean Islands' %>
      <%= f.input :activities, placeholder: 'A detailed description of the treasure hunt' %>
      <%= f.input :size, placeholder: '200 sq.ft' %>
      <%= f.input :price, placeholder: '$$$$$' %>
      <%= f.input :difficulty, :collection => %w[Easy Medium Hard] %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, value: "Add", class: "btn btn-primary w-50 my-2" %>
    </div>
  <% end %>

</div>
