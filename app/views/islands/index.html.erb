<%= render 'shared/banner_islands' %>

<div class="container">
<div class="row m-0">
  <% @islands.each do |island| %>
    <div class="col-12 col-sm-6 col-md-4 d-flex justify-content-between my-4">
      <%= link_to island_path(island), class: "island-link" do %>

  <div class="card-trip">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg">
    <div class="card-trip-infos">
      <div>
        <h2> <%= island.name %> </h2>
        <p> <%= island.location %> </p>
      </div>
      <h2 class="card-trip-pricing"> <%= island.price %> $ </h2>
      <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
    </div>
  </div>

      <% end %>
    </div>
  <% end %>
</div>
</div>
<br>

<% if user_signed_in? %>
  <%= link_to new_island_path, class: 'btn btn-primary' do %>
    Add your own
  <% end %>
<% end %>
